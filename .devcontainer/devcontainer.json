{
  "name": "Zomp EF Core Extensions",
  "dockerComposeFile": "docker-compose.yml",
  "service": "zomp-efcore-extensions-dev",

  "workspaceFolder": "/workspace",

  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "remote.extensionKind": {
          "ms-azuretools.vscode-docker": "workspace"
        },
        "mssql.connections": [
          {
            "server": "localhost,1433",
            "database": "",
            "authenticationType": "SqlLogin",
            "user": "sa",
            "password": "P@ssw0rd",
            "emptyPasswordInput": false,
            "savePassword": false,
            "profileName": "mssql-container"
          }
        ]
      },

      "extensions": [
        "ms-dotnettools.csharp",
        "ms-mssql.mssql",
        "formulahendry.dotnet-test-explorer",
        "ms-azuretools.vscode-docker",
        "mutantdino.resourcemonitor"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    }
  },

  "forwardPorts": [5432, 5050, 1433],

  "remoteEnv": {
    "DeveloperBuild": "True",
    "PATH": "${containerEnv:PATH}:/opt/mssql-tools/bin",
    "Zomp_EF_Data__ConnectionString": "Server=localhost;Database={0};User ID=sa;Password=P@ssw0rd;MultipleActiveResultSets=true;Connect Timeout=30;TrustServerCertificate=True;"
  },

  "postCreateCommand": "dotnet restore Zomp.EFCore.Extensions.sln"
}
